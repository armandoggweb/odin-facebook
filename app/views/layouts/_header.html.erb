<head>        
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <%= link_to "Odin-Facebook", root_path, class: "navbar-brand"%>
        <ul class="navbar-nav mr-auto">
            <%unless user_signed_in?%>
                <li class="nav-item"><%=render 'shared/sign_in_nav.html.erb'%></li>
            <%else%>
                <li class="nav-item">
                    <div class="container-sm">
                        <%= avatar_icon(current_user, 25) %>
                        <%= link_to  current_user.name, user_path(current_user), class: "nav-link" %>
                    </div>
                </li>
                <li class="nav-item">
                    <%= link_to "(#{requests_number}) new friendship #{'request'.pluralize(requests_number)}", 
                        pending_requests_path(current_user), class: 'nav-link' %>
                </li>
                <li class="nav-item"><%= link_to 'Users', users_path, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to 'Friends', user_friends_path(current_user), class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to  "Logout", destroy_user_session_path, method: :delete , class: "nav-link"%></li>
            <%end%>
        </ul>
    </nav>
</head>